{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true
	},
	"overrides": [
		{
			"formatter": {
				"indentWidth": 2
			}
		}
	],
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 100,
			"semicolons": "asNeeded",
			"indentWidth": 2,
			"indentStyle": "tab",
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentWidth": 2
		},
		"linter": {
			"enabled": true
		}
	}
}
